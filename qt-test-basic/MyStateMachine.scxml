<scxml 
  initial="idle" 
  version="1.0" 
  name="MyStateMachine"
  datamodel="cplusplus:MyDataModel:MyDataModel.h"
  xmlns="http://www.w3.org/2005/07/scxml">
  <state id="idle">

		
    <transition event="start" target="running"/>

  </state>

  <state id="running">



   <transition event="stop" target="idle"/>

  </state>
</scxml>

